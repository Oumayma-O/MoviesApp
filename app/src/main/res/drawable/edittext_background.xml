<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#303135" /> <!-- Background color when selected -->
            <corners android:radius="10dp" /> <!-- Corner radius in dp -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#303135" /> <!-- Default background color -->
            <corners android:radius="10dp" /> <!-- Corner radius in dp -->
        </shape>
    </item>

</selector>
